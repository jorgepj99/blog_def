{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
    <h1>Configuracion de usuario</h1><br>
    {#{{ dump(users) }}#}
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Accions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            </td>
            <td>
                <a class="btn btn-info" href="{{ path('app_admin_user_editado') }}">Editar</a>
                <a class="btn btn-info" href="{{ path('app_admin_user_pass') }}">Cambiar contraseña</a>
                <a class="btn btn-danger" href="{{ path('app_admin_user_delete') }}" onclick="return confirm('¿Estás seguro?')">Dar de baja</a>
            </td>
        </tr>
        </tbody>
    </table>
    {% endif %}
{% endblock %}
{% block footer %}
    <div class="container">
        <h2 class="text-muted">Bienvenido a Pepe's Blog {{ user.username }}</h2>
    </div>
{% endblock %}